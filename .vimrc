execute pathogen#infect()
syntax enable
let g:solarized_termcolors=256
set background=dark
colorscheme solarized
filetype plugin indent on
set nu
set list
inoremap jk <ESC>

set expandtab
set shiftwidth=4
set softtabstop=4
set autoindent
set smartindent

autocmd FileType html set omnifunc=htmlcomplete#CompleteTags 

inoremap # X#

noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>

